[Unit]
Description=Flight Delay API (Docker)
After=docker.service
Requires=docker.service

[Service]
Restart=always
ExecStartPre=/usr/bin/docker rm -f flight-api || true
ExecStart=/usr/bin/docker run --rm --name flight-api -p 8000:8000 flight-delay-api
ExecStop=/usr/bin/docker stop flight-api

[Install]
WantedBy=multi-user.target
